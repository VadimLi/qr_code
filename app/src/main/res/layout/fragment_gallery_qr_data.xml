<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/downloaderGalleryLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/headerLayoutOfQrGallery"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@null"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backFromQrGallery"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:src="@mipmap/ic_return_foreground"
            android:contentDescription="@string/back_press" />
        <TextView
            android:id="@+id/contentOfQrData"
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textSize="17sp"
            android:ellipsize="end"
            android:maxLines="1" />
        <ImageView
            android:id="@+id/shareQrData"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_share_white_foreground"
            android:contentDescription="@string/share" />
    </RelativeLayout>
    <com.vadim.ui.custom_view.HackyViewPager
        android:id="@+id/qrDataPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
